{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto-merge Helm Patch Releases",
      matchDatasources: ["helm"],
      matchUpdateTypes: ["patch"],
      matchPackageNames: [
        "authelia",
        "cert-manager",
        "cilium",
        "cloudnative-pg",
        "csi-driver-nfs",
        "csi-driver-smb",
        "gpu-operator",
        "longhorn",
        "metallb",
        "metrics-server",
        "node-feature-discovery",
        "kube-prometheus-stack",
        "reloader",
        "spegel",
        "traefik",
      ],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      minimumReleaseAge: "1 day",
      internalChecksFilter: "strict",
    },
    {
      description: "Auto-merge Helm Minor Releases",
      matchDatasources: ["helm"],
      matchUpdateTypes: ["minor"],
      matchPackageNames: [
        "authelia",
        "cert-manager",
        "cloudnative-pg",
        "csi-driver-nfs",
        "csi-driver-smb",
        "gpu-operator",
        "metallb",
        "metrics-server",
        "node-feature-discovery",
        "kube-prometheus-stack",
        "reloader",
        "spegel",
        "traefik",
      ],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      minimumReleaseAge: "3 days",
      internalChecksFilter: "strict",
    },
  ]
}
